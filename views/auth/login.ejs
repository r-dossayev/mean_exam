<%- include("../partials/header")%> <%- include("../partials/navbar")%>
<div
    class="container"
    style="margin-top: 5rem; width: 80vw; margin-bottom: 11rem"
>
    <%- include('../partials/flash') %>
    <h1 class="mb-3">Логин</h1>
    <form class="needs-validation" action="/login" method="POST" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Почта</label>
            <input
                type="email"
                class="form-control"
                id="username"
                placeholder="Почта"
                name="username"
                required
            />
            <div class="valid-feedback">Почта найдена!</div>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Пароль</label>
            <input
                type="password"
                class="form-control"
                id="password"
                placeholder="Пароль"
                name="password"
                required
            />
            <div class="valid-feedback">Пароль совпадает!</div>
        </div>

        <button type="submit" class="btn btn-main m-3">Логин</button>
        <a class="btn btn-main blue" href="/register">Регистрация</a>
    </form>
</div>

<%- include("../partials/footer")%>
