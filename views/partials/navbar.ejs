<div id="menuicon">
    <div id="menuline"></div>
</div>

<div id="mainmenu">
    <nav>
        <div class="logo">
            <img src="/assets/logo.png" alt="" />
            <a href="/">Shop</a>
        </div>
        <ul>
            <% for (let category of categories) { %>
                <li>
                    <a style="color: #ffffff" href="/products/category/<%= category._id %>">
                        <%= category.title %>
                    </a>
                </li>
            <% } %>
        </ul>
        <div class="icons-user">
            <% if(!currentUser){ %>
            <a href="/login" class="btn-sec">Логин</a>
            <a href="/register" class="btn-sec blue">Регистрация</a>

            <% } else{ %>

            <i class="fa fa-search" aria-hidden="true"></i>

            <a href="#" class="nav">
                <a href="/user/<%= currentUser._id %>/cart">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                </a>
                <sup>
                    <span class="badge bg-danger">
                        <%= currentUser.cart.length %>
                    </span>
                </sup>
            </a>
            <a href="/user/<%= currentUser._id %>">
                <i class="fa fa-user-o" aria-hidden="true"></i>
            </a>
            <a href="/logout" class="nav-link text-white oswald">Выйти</a>
            <% if(currentUser.username === 'admin@gmail.com'){ %>
            <a href="/products/new" class="btn-sec blue">Админ панель</a>
            <% } %> <% } %>
        </div>

        <div id="close">
            <i class="fa fa-close"></i>
        </div>
    </nav>
</div>
<div class="padding"></div>
